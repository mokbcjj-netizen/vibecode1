        let currentRound = 0;
        let score = 0;
        let shuffledData = [];
        const totalRounds = 10; // ì´ ë¬¸ì œ ìˆ˜

        // DOM ìš”ì†Œ
        const startScreen = document.getElementById('start-screen');
        const resultScreen = document.getElementById('result-screen');
        const gameContainer = document.getElementById('game-container');
        const controls = document.getElementById('controls');
        const cardArea = document.getElementById('card-area');
        const currentCard = document.getElementById('current-card');
        const cardText = document.getElementById('card-text');
        const cardIcon = document.getElementById('card-icon');
        const progressBar = document.getElementById('progress-bar');
        const scoreDisplay = document.getElementById('score-display');
        const feedbackMsg = document.getElementById('feedback-msg');
        
        // ëª¨ë‹¬ ìš”ì†Œ
        const modal = document.getElementById('explanation-modal');
        const modalTitle = document.getElementById('modal-title');
        const modalDesc = document.getElementById('modal-desc');
        const modalIcon = document.getElementById('modal-icon');

        // ê²Œì„ ì‹œì‘ í•¨ìˆ˜
        function startGame() {
            score = 0;
            currentRound = 0;
            scoreDisplay.innerText = score;
            startScreen.classList.add('hidden');
            resultScreen.classList.add('hidden');
            controls.classList.remove('hidden');
            
            // ë°ì´í„° ì…”í”Œ
            shuffledData = [...gameData].sort(() => Math.random() - 0.5).slice(0, totalRounds);
            
            updateProgress();
            showCard();
        }

        // ì¹´ë“œ í‘œì‹œ í•¨ìˆ˜
        function showCard() {
            const data = shuffledData[currentRound];
            
            // ì¹´ë“œ ë‚´ìš© ì—…ë°ì´íŠ¸
            cardText.innerText = data.text;
            cardIcon.innerText = data.icon;
            
            // ì• ë‹ˆë©”ì´ì…˜ ë¦¬ì…‹
            currentCard.className = "w-full bg-white border-2 border-slate-100 rounded-3xl shadow-xl p-6 flex flex-col items-center justify-center text-center space-y-4 transform transition-all duration-300 card-enter";
            
            // ìƒ‰ìƒ ì´ˆê¸°í™”
            currentCard.style.borderColor = '#f1f5f9'; // slate-100
        }

        // ë‹µë³€ ì²˜ë¦¬ í•¨ìˆ˜
        function handleAnswer(userChoice) {
            const data = shuffledData[currentRound];
            const isCorrect = userChoice === data.type;
            
            if (isCorrect) {
                score += 10;
                scoreDisplay.innerText = score;
                playSound('correct');
                showModal(true, data);
            } else {
                playSound('wrong');
                currentCard.classList.add('shake');
                showModal(false, data);
            }
        }

        // ëª¨ë‹¬ í‘œì‹œ í•¨ìˆ˜
        function showModal(isCorrect, data) {
            modal.classList.remove('hidden');
            
            if (isCorrect) {
                modalTitle.innerText = "ì •ë‹µì…ë‹ˆë‹¤! ğŸ‰";
                modalTitle.className = "text-xl font-bold mb-2 text-green-600";
                modalIcon.innerText = "ğŸ™†â€â™‚ï¸";
            } else {
                modalTitle.innerText = "ì•„ì‰½ë„¤ìš”! ğŸ˜…";
                modalTitle.className = "text-xl font-bold mb-2 text-red-500";
                modalIcon.innerText = "ğŸ™…â€â™‚ï¸";
            }
            
            // ì„¤ëª… êµ¬ì„±: ì •ë‹µ ìœ í˜•ì— ë”°ë¼ í…ìŠ¤íŠ¸ í‘œì‹œ
            const typeText = data.type === 'positive' ? 'ê¸ì •ì  ì˜í–¥ (ê¸°íšŒ)' : 'ë¶€ì •ì  ì˜í–¥ (ìœ„ê¸°)';
            modalDesc.innerHTML = `<strong class="block mb-2 text-slate-800">${typeText}</strong>${data.desc}`;
        }

        // ë‹¤ìŒ ë¬¸ì œë¡œ ì´ë™
        function nextCard() {
            modal.classList.add('hidden');
            currentRound++;
            updateProgress();

            if (currentRound < shuffledData.length) {
                showCard();
            } else {
                endGame();
            }
        }

        // ê²Œì„ ì¢…ë£Œ í•¨ìˆ˜
        function endGame() {
            controls.classList.add('hidden');
            resultScreen.classList.remove('hidden');
            document.getElementById('final-score').innerText = score;
            
            const msg = document.getElementById('final-message');
            if(score === 100) msg.innerText = "ì™„ë²½í•´ìš”! AI ë§ˆìŠ¤í„°ì‹œë„¤ìš”! ğŸ†";
            else if(score >= 70) msg.innerText = "ì°¸ ì˜í–ˆì–´ìš”! í›Œë¥­í•©ë‹ˆë‹¤. ğŸ‘";
            else msg.innerText = "ë‹¤ì‹œ í•œë²ˆ ë„ì „í•´ë³´ì„¸ìš”! í™”ì´íŒ… ğŸ’ª";
        }

        // ì§„í–‰ë„ ì—…ë°ì´íŠ¸
        function updateProgress() {
            const percentage = ((currentRound) / totalRounds) * 100;
            progressBar.style.width = `${percentage}%`;
        }

